---
import Layout from "./Layout.astro";
const crumbs = [
  {
    name: "home",
    link: "/",
    disabled: false,
  },
  {
    name: "Reading Lists",
    link: "/reading-lists",
    disabled: true,
  },
];

const frontmatter = Astro.props;
---

<Layout title={frontmatter.title} crumbs={crumbs}>
  <slot />
</Layout>

<style is:global>
  p:first-of-type {
    padding-block-end: 1rem;
  }
</style>
