---
import Layout from "./Layout.astro";
const crumbs = [
	{
		name: "home",
		link: "/",
		disabled: false,
	},
	{
		name: "Reading Lists",
		link: "/reading-lists",
		disabled: true,
	},
];

const frontmatter = Astro.props

---

<Layout title={frontmatter.title} crumbs={crumbs}>
        <slot />
</Layout>

<style is:global>

h3 {
    font-size: var(--fs-md);
    color: var(--tertiary);
    font-weight: 600;
    line-height: 1.4;
    padding-block: 1rem;
}

p {
margin-block-end: 0.2em;
}

ul {
  list-style-position: inside;
}

li > a {
        color: var(--on-surface);
        text-decoration: none;
}

li > a:hover,
li > a:focus {
   color: var(--primary);
   text-decoration: underline;
}

strong {
  font-weight: 600;
}

em {
font-style: italic;
font-size: var(--fs-xs);
color: var(--tertiary)
}

</style>
