---
import Layout from "../layouts/Layout.astro";

const crumbs = [
	{
		name: "home",
		link: "/",
		disabled: false,
	},
];
---

<Layout title="home" crumbs={crumbs}>
	<h1 class="title">Ronnie Nissan <span>A.K.A ronniedroid</span></h1>

	<p>
		Hello! and welcome to my website/portfolio. A place where I share my
		thoughts, projects and some more.
	</p>
</Layout>

<style>
	h1 > span {
		text-transform: lowercase;
		font-size: var(--fs-sm);
	}
	p {
		font-size: var(--fs-sm);
	}
</style>
